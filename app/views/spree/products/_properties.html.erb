<% unless @product_properties.blank? %>
  <% dimension = {} %>  

  <h3 class="pt-4 font-weight-bold product-details-subtitle"><%= Spree.t(:details) %></h3>
  <ul id="product-properties" class="m-0 list-unstyled product-properies" data-hook>
    <% @product_properties.each do |product_property| %>
      <% if product_property.show_property? %>
      <% unless product_property.property.presentation.in?(["Height", "Width", "Length"]) %>
        <li>
          <span class="font-weight-bold text-break"><%= product_property.property.presentation %>:</span>
          <span class="text-break"><%= product_property.value %></span>
        </li>
      <% else %>
        <% dimension[product_property.property.presentation] = product_property.value %>  
      <% end %>
      <% end %>
    <% end %>
  </ul>
 
    <div class="m-0 row">
        <span class="font-weight-bold text-break">Size : </span>
        &nbsp;
        <span class="text-break">
            <%= dimension["Length"] %>
        </span>
        &nbsp;
         <span class="text-break"> X </span>
        &nbsp;
         <span class="text-break">
            <%= dimension["Width"] %>
        </span>
        &nbsp;
         <span class="text-break">  X </span>
        &nbsp;
         <span class="text-break">
            <%= dimension["Height"] %>
        </span>
        &nbsp;
         <span class="text-break"> (mm) </span>
    </div>
    

<% end %>